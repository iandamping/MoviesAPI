<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSavedMovieMovie"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/dot_disable" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivSavedMovieMovie"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/spacing_huge"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSavedMovieMovieTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Judul film" />

        <TextView
            android:id="@+id/tvSavedMovieMovieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_medium"
            android:fontFamily="@font/lato"
            tools:text="2018-20-13" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivDeleteMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_black" />



</RelativeLayout>